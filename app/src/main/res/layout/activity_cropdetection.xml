<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cropdetection">


  <LinearLayout
      android:id="@+id/rel1"
      android:layout_width="160dp"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="@drawable/action_background"
      android:layout_alignParentBottom="true"
      android:elevation="2dp">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Take_Action"
      android:textSize="17sp"
      android:layout_marginTop="8dp"
      android:fontFamily="@font/google1"
      android:textColor="@color/white"
      android:layout_marginStart="16dp"/>

    <LinearLayout
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="180dp"
        android:layout_height="wrap_content">

      <ImageView
          android:id="@+id/button"
          android:layout_width="94dp"
          android:layout_height="94dp"
          android:layout_marginStart="8dp"
          android:background="@drawable/camera"
          android:fontFamily="@font/acne"/>

    </LinearLayout>

  </LinearLayout>
  <LinearLayout
      android:id="@+id/cardView"
      android:layout_width="match_parent"
      android:layout_height="280dp"
      android:orientation="vertical"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:background="@drawable/login_white_background">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:scaleType="fitCenter"
        android:src="@drawable/scan_leaf" />

  </LinearLayout>


</RelativeLayout>