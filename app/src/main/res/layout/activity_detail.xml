<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/detailsCropImage"
            android:src="@drawable/grapes"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>




        <TextView
            android:id="@+id/culture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details"
            android:textSize="18sp"
            android:fontFamily="@font/google1"
            android:letterSpacing="0.07"
            android:textColor="@color/colorAccent"
            android:layout_below="@id/detailsCropImage"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/culture"
            android:id="@+id/cropDetailsText"
            android:padding="16dp"

            android:letterSpacing="0.06"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</ScrollView>